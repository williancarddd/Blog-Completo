<!DOCTYPE html>
 <%- include('../../partials/head.ejs') %> 
<html lang="en">
  <body>
  <%- include('../../partials/navbar_admin.ejs') %> 
  <main>
   <hr>
   <div class="container">
    <form method="post" action="/admin/users/create">
      <div class='form-group'>
        <h3 class='m-3 text-lg-center  fs-6'>Create new user</h3>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name='email_admin' type="email" class="form-control p-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input name='password_admin' type="password" class="form-control p-2" id="exampleInputPassword1" placeholder="Password">
      </div>
      <div class="form-group">
        <label >Role</label>
        <select class="form-select" aria-label="Default select example" id="role_user" name="role_user">
          <option selected>Select Role User</option>
          <% for (const role of roles) { %>
            <tr>
                <option value=<%= role.typeRoleId %> ><%= role.name %></option>
            </tr>
        <% } %>
        </select>
    </div>
      <div class="form-check">
  
      </div>
      <button type="Create" class="btn btn-primary btn-block" >Create</button>
    </form>
   </div>
  </main>
  <%- include('../../partials/footer_scripts.ejs') %>
</body>
</html>