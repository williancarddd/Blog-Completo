<!DOCTYPE html>
 <%- include('../../partials/head.ejs') %> 
<html lang="en">
  <body>

  <%- include('../../partials/navbar_admin.ejs') %> 
  <main>
    <hr>
    <section class='container m-auto'>
      <a href="/admin/users/create"><button class='btn btn-secondary m-3'>Create new admin user</button></a>
      <table class="table w-25">
        <thead class=' bg-secondary text-white'>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
         <% data_users.forEach(user => { %>
          <tr>
            <th scope="row"><%- user.id %> </th>
            <td><%- user.email %> </td>
            <td><%- JSON.stringify(user, null, "  "); %> </td>
           
            <% if (roles_loged_user?.roles?.delete_user) { %>
              <td><form action="/admin/users/delete/<%- user.id %> " style='display: inline;' method="POST" onsubmit="confirm_delete(event, this)">
                <button type="submit" class='btn btn-danger' >Delete</button>
              </form></td>
            <% } %>
          </tr>
         <% }) %>
         <tr>
         
         </tr>
        </tbody>
    </section>
  </main>
  <%- include('../../partials/footer_scripts.ejs') %>
</body>
</html>